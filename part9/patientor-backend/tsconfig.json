{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2021",

    /* Modules */
    "module": "node16",

    /* Emit */
    "outDir": "./build/",
    // "rootDir": "./src/",
    "newLine": "lf",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
